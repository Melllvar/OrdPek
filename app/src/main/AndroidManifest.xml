<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.henkan.ordpek"
    android:installLocation="auto" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChooseImageActivity"
            android:label="@string/title_activity_choose_image"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.henkan.ordpek.MainActivity" />
        </activity>
        <activity
            android:name=".ChooseWordActivity"
            android:label="@string/title_activity_choose_word"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.henkan.ordpek.MainActivity" />
        </activity>
        <activity
            android:name=".InitialLetterActivity"
            android:label="@string/title_activity_initial_letter"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.henkan.ordpek.MainActivity" />
        </activity>
        <activity
            android:name=".AddImageActivity"
            android:label="@string/title_activity_add_image"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.henkan.ordpek.MainActivity" />
        </activity>
        <activity
            android:name=".RemoveImageActivity"
            android:label="@string/title_activity_remove_image"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.henkan.ordpek.MainActivity" />
        </activity>
    </application>

</manifest>
